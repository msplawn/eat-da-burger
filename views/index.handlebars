<div class="container">
  <div class="row"></div>
  <div class="jumbotron">
    <h1 class="display-4">Eat Da Burger!</h1>
    <div class="row">
      <img src="/assets/images/burger.png">
    </div>
  </div>
</div>

<div class="row">
  <div id="need" class="col-sm">
    <h2>Need Da Burg!</h2>


    {{#each burgers}}
    {{#unless devoured}}
    {{> burger/burger-block devoured=true}}
    {{/unless}}
    {{/each}}

  </div>


  <div id="ate" class="col-sm">
    <h2>Ate Da Burg!</h2>


    {{#each burgers}}
    {{#if devoured}}
    {{> burger/burger-block devoured=false}}
    {{/if}}
    {{/each}}

  </div>
</div>

<div id="add">
  <h2>Add A Burg!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burg!</button>
  </form>
</div>
</div>